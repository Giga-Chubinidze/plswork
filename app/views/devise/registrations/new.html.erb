<div class="section">
  <div class="container">
  <div class="columns is-centered">

    <div class="column is-4">

    <h2 class="title is-2"><%= t(:sign_up) %></h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="field">
      <div class="control">
      <%= f.input :name, :label => t(:name), required: false, autofocus: true, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" } %>
      </div>
    </div>

    <div class="field">
      <div class="control">
      <%= f.input :email, :label => t(:email), required: false, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" } %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= f.input :password, :label => t(:password), placeholder: "#{@minimum_password_length} #{t(:characters_minimum)}", required: false, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" }%>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= f.input :password_confirmation, :label => t(:password_confirmation), required: false, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" } %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= f.button :submit, t(:sign_up), class:"button is-warning is-medium" %>
      </div>
    </div>

    <% end %>
      <br />
      <%= render "devise/shared/links" %>
    </div>
    </div>
  </div>
</div>