<% content_for :header do %>
<section class="hero is-warning" style="background: white;">
    <div class="container">
      <h5 class="title">
        <%= t(:purchasing_services) %>
      </h5>
    </div>
</section>
<% end %>

<br><br><br>
<div class="purchaseform">
    <div class="col-md-4"> 
        <div class="payment-info">
            <div class="d-flex justify-content-between align-items-center">
                <span>Card Details</span>
            </div>
            <span class="type d-block mt-3 mb-1"></span>
            
            <label class="radio">
                <input type="radio" name="card" value="payment" checked> 
                <span><img width="50" src="https://img.icons8.com/color/48/000000/mastercard.png"/></span> 
            </label>
            <label class="radio"> 
                <input type="radio" name="card" value="payment"> 
                <span><img width="50" src="https://img.icons8.com/officel/48/000000/visa.png"/></span> 
            </label>
            <label class="radio"> 
                <input type="radio" name="card" value="payment"> 
                <span><img width="50" src="https://img.icons8.com/ultraviolet/48/000000/amex.png"/></span> 
            </label>
            <label class="radio"> 
                <input type="radio" name="card" value="payment"> 
                <span><img width="50" src="https://img.icons8.com/officel/48/000000/paypal.png"/></span> 
            </label>
            <div>
                <label class="credit-card-label">Name On Card</label>
                <br>
                <input type="text" class="form-control credit-inputs" placeholder="Name">
            </div>
            <div>
                <label class="credit-card-label">Card Number</label>
                <br>
                <input type="text" class="form-control credit-inputs" placeholder="0000 0000 0000 0000">
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label class="credit-card-label">Expiry Date</label>
                    <br>
                    <input type="text" class="form-control credit-inputs" placeholder="12/24">
                </div>
                <div class="col-md-6">
                    <label class="credit-card-label">CVV</label>
                    <br>
                    <input type="text" class="form-control credit-inputs" placeholder="342">
                </div>
            </div>
            <hr class="line">
                <div class="d-flex justify-content-between information">
                    <span>Subtotal:</span>
                    <span><%= number_to_currency(@cart.total_price) %></span>
                </div>
                <div class="d-flex justify-content-between information">
                    <span>Shipping:</span>
                    <span>$20.00</span>
                </div>
                <div class="d-flex justify-content-between information">
                    <span>Total(Incl. taxes):</span>
                    <span><%= number_to_currency(@cart.total_price + 20) %></span>
                </div>
                <button class="btn btn-primary btn-block d-flex justify-content-between mt-3" type="button">
                    <span>Checkout<em class="fa fa-long-arrow-right ml-1"></em></span>
                </button>
            </div>
        </div>
    </div>
</div>

<style>

  .purchaseform {
    display: flex;
    align-items: center;
    justify-content: center;
    align: center;
    flex-wrap: wrap;
  }

